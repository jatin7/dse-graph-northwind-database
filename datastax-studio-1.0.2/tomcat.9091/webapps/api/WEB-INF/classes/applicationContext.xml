<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-4.1.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-4.1.xsd">

    <context:component-scan base-package="com.datastax.studio"/>

    <bean class="java.util.concurrent.Executors" factory-method="newScheduledThreadPool" destroy-method="shutdownNow">
        <constructor-arg type="int" value="#{T(java.lang.Runtime).getRuntime().availableProcessors() * 2}" />
        <constructor-arg type="java.util.concurrent.ThreadFactory" value="#{T(com.google.common.util.concurrent.ThreadFactoryBuilder).newInstance().setNameFormat('scheduled-executor-%d').build()}" />
    </bean>
</beans>
